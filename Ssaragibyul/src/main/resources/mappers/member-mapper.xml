	<update id="updateMember" parameterType="Member">
		UPDATE MEMBER SET USER_PW = #{userPw}, USER_AGE = #{userAge}, USER_EMAIL = #{userEmail}, USER_PHONE = #{userPhone}, USER_ADDR = #{userAddr}, UPDATE_DATE = SYSDATE WHERE USER_ID = #{userId}
	</update>
	
	<delete id="deleteMember" parameterType="Member">
		DELETE MEMBER WHERE USER_ID = #{userId }
	</delete> -->
	
</mapper>